<%- include('partials/head.ejs'); -%>
<% if (user) { %>
    <%- include('partials/headerLogueado'); %>
<% } else { %>
    <%- include('partials/header'); %>
<% } %>

<section class="editarperfilpagina">
    <h2 class="tituloeditarperfil">Editar Perfil</h2>
    <form action="/profile/edit" method="POST">
        <div class="edicionperfil">
            <label class="perfilado" for="nombre">Nombre:</label>
            <input id="nombre" type="text" name="nombre" value="<%= user.nombre %>" required>
        </div>
        <div>
            <label class="perfilado" for="email">Correo Electrónico:</label>
            <input id="email" type="email" name="email" value="<%= user.email %>" required>
        </div>
        <div>
            <label class="perfilado" for="fotoPerfil">URL de la Foto de Perfil:</label>
            <input id="fotoPerfil" type="text" name="fotoPerfil" value="<%= user.fotoPerfil %>">
        </div>
        <div>
            <label class="perfilado" for="password">Nueva Contraseña:</label>
            <input id="password" type="password" name="password" placeholder="Dejar en blanco para no cambiar">
        </div>
        <button class="botonedicionperfil" type="submit">Guardar Cambios</button>
    </form>
</section>

<%- include('partials/footer.ejs'); -%>